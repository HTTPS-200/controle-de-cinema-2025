@model DetalhesSessaoViewModel;

@{
    ViewBag.Titulo = "Detalhes da Sessão";
}

<hr />
<div class="row justify-content-center my-5">
    <div class="col-md-8">

        <div class="card rounded-4 border-0">
            <div class="card-body p-md-5">
                <h3>Detalhes</h3>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Inicio" class="control-label fs-5">Início:</label>
                    <input name="Inicio" class="form-control" value="@Model.Inicio" readonly disabled />
                </div>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="MaxIngressos" class="control-label fs-5">Número máximo de ingressos:</label>
                    <input name="MaxIngressos" class="form-control" value="@Model.MaxIngressos" readonly disabled />
                </div>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Filme" class="control-label fs-5">Filme:</label>
                    <input name="Filme" class="form-control" value="@Model.Filme" readonly disabled  />
                </div>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Sala" class="control-label fs-5">Sala:</label>
                    <input name="Sala" class="form-control" value="@Model.Sala" readonly disabled data-se="ingressosDisponiveis" />
                </div>

                <div class="form-group d-grid gap-2 mt-3">
                    <label for="Encerrada" class="control-label fs-5">Status:</label>
                    <input name="Encerrada" class="form-control" value="@(Model.Encerrada ? "Encerrada" : "Aberta")" readonly disabled />
                </div>

                <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                    <a asp-action="Index" data-se="btnVoltar">Voltar para a listagem</a>
                </div>
            </div>
        </div>

    </div>
</div>